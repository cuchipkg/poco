<div class="container marketing">
	<div class="card-deck mb-3 text-center">
		<% @item.each do |search_item| %>
			<ul class="list-group">
				<li class="list-group-item">
					<div class="card mb-4 shadow-sm">
				        <div class="card-header">
				          <h4 class="my-0 font-weight-normal"><%= search_item.name %></h4>
				        </div>
				        <div class="card-img-top">
				          <% if search_item.item_image.attached? %>
				            <%= image_tag search_item.item_image, class: "card-body",size:"230x240" %>
				          <% else %>
				            <img class="card-img-top" src="https://placehold.it/200x200">
				          <% end %>
				          <h1 class="card-title pricing-card-title"><%= search_item.price %></h1>
				          <%= link_to "Mua",item_path(search_item), class: "btn btn-lg btn-block btn-outline-primary"  %>
				        </div>
			  		</div>
				</li>
			</ul>
		<% end %>
	</div>
</div>